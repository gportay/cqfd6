[project]
org='fooinc'
name='barproject'
docker='podman'
docker_run_args="--userns keep-id --group-add keep-groups"

[hello]
command="echo 'Hello World!'"

[app]
command='./configure && make'

[debug]
command='./configure --enable-debug && make DEBUG=all'

[build]
command='cp README.md README.FOOINC \
         && asciidoc README.FOOINC'
files='README.html'
archive='cqfd_${BUILD_ID}_%Gh.tar.xz'

[sudo]
docker="sudo docker"
command="test /.dockerenv && echo docker"

[podman]
docker="podman"
command="test \"\$container\"  =  podman && echo podman"
