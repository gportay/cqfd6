#!/usr/bin/env bash
#
# validate the behavior of run command with flavors

. "$(dirname "$0")/jtest.inc" "$1"
flavor="foo"

cd "$TDIR/" || exit 1

test_file=$flavor
jtest_prepare "run cqfd without argument and with build flavor should execute flavor's command"

# shellcheck disable=SC2181
if cqfd -b "$flavor" && [ -f "$test_file" ]; then
	jtest_result pass
else
	jtest_result fail
fi
# cleanup
rm -f "$test_file"

test_file=$flavor
jtest_prepare "run cqfd run without argument and with build flavor should execute flavor's command"

# shellcheck disable=SC2181
if cqfd -b "$flavor" run && [ -f "$test_file" ]; then
	jtest_result pass
else
	jtest_result fail
fi
# cleanup
rm -f "$test_file"

# cleanup
make clean
