#!/usr/bin/env bash
#
# validate the behavior of run -c command

. "$(dirname "$0")/jtest.inc" "$1"

cd "$TDIR/" || exit 1

jtest_prepare "run cqfd run -c with argument should concatenate to command string"
if cqfd run -c --debug | grep "^Successfully remade target file 'build'\.$" && \
   grep "^cqfd$" a/cqfd_a.txt; then
	jtest_result pass
else
	jtest_result fail
fi

# cleanup
make clean

rm -f a/cqfd_a.txt

jtest_prepare "run cqfd run -c without argument should fail"
if ! cqfd run -c; then
	jtest_result pass
else
	jtest_result fail
fi

rm -f "$test_file"
