#!/usr/bin/env bash
#
# validate the behavior of --init option

set -o pipefail

. "$(dirname "$0")/jtest.inc" "$1"
cqfd="$TDIR/.cqfd/cqfd"

cd "$TDIR/" || exit 1

################################################################################
# 'cqfd --init' with a proper .cqfdrc should pass
################################################################################
jtest_prepare "cqfd --init"
if "$cqfd" --init; then
	jtest_result pass
else
	jtest_result fail
fi

################################################################################
# 'cqfd --init' with a nonexistent Dockerfile should fail
################################################################################
jtest_prepare "cqfd --init with a nonexisting dockerfile shall fail"
cp -f .cqfdrc .cqfdrc.orig
sed -i -e "s/\[build\]/[build]\ndistro='thisshouldfail'/" .cqfdrc
if ! "$cqfd" --init; then
	jtest_result pass
else
	jtest_result fail
fi

################################################################################
# 'cqfd --init' with a proper Dockerfile should pass
################################################################################
jtest_prepare "cqfd --init with an other Dockerfile"
sed -i -e "s/thisshouldfail/centos/" .cqfdrc
if "$cqfd" --init true; then
	jtest_result pass
else
	jtest_result fail
fi
# restore initial .cqfdrc
mv -f .cqfdrc.orig .cqfdrc

################################################################################
# 'cqfd --init' with same uid/gid dummy user/group should pass
################################################################################
jtest_prepare "cqfd --init with same uid/gid dummy user/group"
cat <<EOF >>.cqfd/docker/Dockerfile
RUN groupadd -og "${GROUPS[0]}" -f dummy && \
    useradd -s /bin/bash -ou "$UID" -g "${GROUPS[0]}" dummy
EOF
if "$cqfd" --init; then
	jtest_result pass
else
	jtest_result fail
fi

################################################################################
# 'cqfd --init' in quiet mode should be quiet
################################################################################
jtest_prepare "cqfd -q --init should remain quiet"
if ! "$cqfd" -q --init | grep -E "^(sha256:)?[a-f0-9]{64}$"; then
	jtest_result fail
else
	jtest_result pass
fi
